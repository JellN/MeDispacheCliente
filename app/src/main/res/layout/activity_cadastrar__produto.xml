<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Cadastrar_Produto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bul">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="490dp"
            android:text="Nome do produto"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="@color/negra"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/nome_cadastro"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="450dp"
            android:hint="digite o nome"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="@color/green"
            android:textStyle="italic"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="390dp"
            android:text="Valor do produto"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="@color/negra"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/valor_cadastro"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="350dp"
            android:hint="digite o valor"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="@color/green"
            android:textStyle="italic"
            android:inputType="number"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="290dp"
            android:text="Quantidade(opcional)"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="@color/negra"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/quantidade_cadastro"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="250dp"
            android:hint="digite a quantidade"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textColor="@color/green"
            android:textStyle="italic"
            android:inputType="number"
            />

        <ImageButton
            android:id="@+id/botao_cadastro"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/confirme"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="180dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />



    </RelativeLayout>












</LinearLayout>