<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/container_img"
        android:src="@drawable/ic_launcher_background"/>

    <TextView
        android:id="@+id/tipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:text="username"
        android:textSize="22dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="60dp"
        android:textColor="@color/negra"
        android:textStyle="bold"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tipo"
        android:layout_toRightOf="@+id/container_img"
        android:layout_marginTop="-5dp"
        android:padding="1dp"
        android:id="@+id/quantidade"
        android:textColor="@color/sub"
        android:layout_marginLeft="20dp"
        android:maxLines="1"
        android:textSize="18sp"
        android:text="123"



        />

    <ImageButton
        android:id="@+id/atualizar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/edicao"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="60dp"
        />
    <ImageButton
        android:id="@+id/deletar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/deletar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>